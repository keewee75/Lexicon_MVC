
@{
    ViewData["Title"] = "Guessing Game";
}

<h1>Guess the number</h1>

@if (ViewBag.EndMessage == "End")
{
    @if (ViewBag.Message != null)
    {
    <p>@ViewBag.Message</p>
    }
    <button class="btn btn-primary" onClick="window.location.href=window.location.href">Reload Game</button>
}
else
{
    <form method="post">
       <div class="input-group mb-3 w-25">
           <div class="col-sm-4">
               <input type="number" name="input" class="form-control" min="1" max="100" placeholder="Insert..." aria-label="Number" aria-describedby="basic-addon1" asp-controller="Home" asp-action="GuessingGame">
           </div>
           <button asp-controller="Home" asp-action="GuessingGame" class="btn btn-success" type="submit">Submit</button>
       </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
}


@if (ViewBag.NumberToGuess != null)
{
    <p>(The random number is: @ViewBag.NumberToGuess)</p>
}

@if (ViewBag.Count != null)
{
    <p>Number of guesses: @ViewBag.Count</p>
}
