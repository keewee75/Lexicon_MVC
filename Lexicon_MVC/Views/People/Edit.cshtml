@model EditPersonViewModel
@*@model PeopleViewModel*@
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit person</h1>

<!-- Edit Person -->
<form asp-controller="People" asp-action="Edit" method="post">

	<div class="form-group row">
		<label asp-for="PersonId" class="col-sm-1 col-form-label">Id</label>
		<div class="col-sm-5">
			<input asp-for="PersonId" type="text" class="form-control" placeholder="PersonId" readonly="readonly">
			<span asp-validation-for="PersonId"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Name" class="col-sm-1 col-form-label">Name</label>
		<div class="col-sm-5">
			<input asp-for="Name" type="text" class="form-control" placeholder="Name">
			<span asp-validation-for="Name"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="CityId" class="col-sm-1 col-form-label">City: </label>
		<div class="col-sm-5">
			<select asp-for="CityId">
			@foreach (var city in Model.Cities)
			{
					if (city.CityId == Model.CityId)
					{
						<option val="@city.CityId" selected>@city.CityName</option>
					}else
					{
						
					<option val="@city.CityId">@city.CityName</option>
					}
			}
			@*<select name="cityId" class="form-control" asp-items="ViewBag.CityNames">*@
				<option value="" disabled>Select City</option>
			</select>
			<span asp-validation-for="CityId"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="PhoneNumber" class="col-sm-1 col-form-label"></label>
		<div class="col-sm-5">
			<input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Phone number">
			<span asp-validation-for="PhoneNumber"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" value="Save changes" class="btn btn-secondary btn-sm">Save changes</button>
		</div>
	</div>
</form>

