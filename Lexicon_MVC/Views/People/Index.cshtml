<form asp-controller="People" asp-action="Search">
    <p>
        <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<form asp-controller="People" asp-action="AddPerson" method="post">
  <div class="form-group row">
    <label asp-for="cpvm.Name" class="col-sm-1 col-form-label">Name</label>
    <div class="col-sm-5">
      <input asp-for="cpvm.Name" type="text" class="form-control" placeholder="Name">
      <span asp-validation-for="cpvm.Name"></span>
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="cpvm.City" class="col-sm-1 col-form-label">City</label>
    <div class="col-sm-5">
      <input type="text" class="form-control" asp-for="cpvm.City" placeholder="City">
      <span asp-validation-for="cpvm.City"></span>
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="cpvm.PhoneNumber" class="col-sm-1 col-form-label"></label>
    <div class="col-sm-5">
      <input type="text" class="form-control" asp-for="cpvm.PhoneNumber" placeholder="Phone number">
      <span asp-validation-for="cpvm.PhoneNumber"></span>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Add Person</button>
    </div>
  </div>
</form>




<table class=" table table-striped">

    <th>Name</th>
    <th>City</th>
    <th>Phone Number</th>
    <th>Delete</th>

@foreach (var person in Model.People)
{
    <partial name="_Person" model="person" />
}
</table>
<div>
    <span>@ViewBag.Message</span>
</div>
