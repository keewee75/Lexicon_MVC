@model PeopleViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>People</h1>

<form method="post">
    <div class="input-group mb-3 w-50">
        <div class="col-sm-4">
            <input type="text" name="Search" class="form-control" placeholder="Search..." aria-label="search" aria-describedby="basic-addon1" asp-controller="People" asp-action="Search">
        </div>
        <button asp-controller="People" asp-action="Search" class="btn btn-success" type="submit">Search</button>
    </div>
</form>


<form asp-controller="People" asp-action="AddPerson" method="post">
  <div class="form-group row">
    <label asp-for="cpvm.Name" class="col-sm-1 col-form-label">Name</label>
    <div class="col-sm-5">
      <input asp-for="cpvm.Name" type="text" class="form-control" placeholder="Name">
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="cpvm.City" class="col-sm-1 col-form-label">City</label>
    <div class="col-sm-5">
      <input type="text" class="form-control" asp-for="cpvm.City" placeholder="City">
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="cpvm.PhoneNumber" class="col-sm-1 col-form-label">Phone</label>
    <div class="col-sm-5">
      <input type="text" class="form-control" asp-for="cpvm.PhoneNumber" placeholder="Phone number">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Add Person</button>
    </div>
  </div>
</form>




<table class=" table table-striped">

    <th>Name</th>
    <th>City</th>
    <th>Phone Number</th>
    <th>Delete</th>

@foreach (var person in Model.People)
{
    <tr>
    <td>@person.Name</td>
    <td>@person.City</td>
    <td>@person.PhoneNumber</td>
    <td>
<form method="post">
 <button
    class="btn"
    asp-action="Delete"
    asp-controller="People"
    asp-route-id="@person.PersonId"   
>Delete</button>
</form>
    </td>
    </tr>
}
</table>

