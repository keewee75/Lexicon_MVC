
@{
    ViewData["Title"] = "AddLanguage";
}

<h1>Add language</h1>

<form asp-action="AddLanguage" method="post">
	<div class="form-group">
		<label>Person: </label>
		<select name="personId" class="form-control" asp-items="ViewBag.People"></select>
	</div>
	<div class="form-group">
		<lable>Language: </lable>
		<select name="languageId" class="form-control" asp-items="ViewBag.Languages"></select>
	</div>
	<input type="submit" value="Add Language" class="btn btn-secondary btn-sm" />
</form>