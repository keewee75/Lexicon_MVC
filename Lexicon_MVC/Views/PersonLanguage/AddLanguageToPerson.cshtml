@model Person
@{
	ViewData["Title"] = "AddLanguage";
}


<form asp-action="AddLanguageToPerson" method="post">
	<div class="form-group col-sm-3">
		<h2>Add language for: @Model.Name </h2>
		
	</div>
	<div class="form-group col-sm-3">
		<select name="languageId" class="form-control" asp-items="ViewBag.Languages">
			<option value="" selected disabled>Select Language</option>
		</select>
		<input type="hidden" name="personId" value="@Model.PersonId" />
	</div>
	<p></p>
	<input type="submit" value="Add Language To Person" class="btn btn-secondary btn-sm" />
</form>