@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>List of roles</h1>

<a asp-action="Create" class="btn btn-secondary btn-sm">Create new role</a>
<a asp-action="AddUserToRole" class="btn btn-secondary btn-sm">Add user to role</a>
<p></p>

<table class="table table-striped table-sm">
    <thead class="thd">
        <tr>
            @*<th style="width:500px">
                Id
            </th>*@
            <th>
                Name
            </th>
            <th>
                Delete role
            </th>
        </tr>
    </thead>
    @foreach (var role in Model)
    {
        <tr>
            @*<td style="width:500px">@role.Id</td>*@
            <td>@role.Name</td>
            <td>
                @if(role.Name != "User" && role.Name != "Admin") // Ser till att User och Admin inte går att Deleta
                {
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete role</a>
                }
            </td>
        </tr>
    }
</table>

