@model UserRoleViewModel
@{
    ViewData["Title"] = "ShowUserRoles";
}

<h1>Show roles for @Model.UserName</h1>

<table class="table table-striped table-sm">
    <thead class="thd">
        <tr>
            <th>Role name</th>
            <th></th>
        </tr>
    </thead>
    @foreach(var role in Model.Roles)
    {
        <tr>
            <td>@role</td>
            <td>
                <a asp-action="RemoveRoleFromUser" asp-route-rolename="@role" asp-route-userid="@Model.UserId" class="btn btn-danger btn-sm">Remove role</a>
            </td>
        </tr>
    }
</table>